@{
    Layout = "~/Views/Home/_Home_Layout.cshtml";
}
<head>
    <!--
        Login Page will contain login form for admins.
        WARNING: IF YOU ARE HERE AND NOT AN ADMIN YOU SHOULDN'T
    -->
    <title>Admin</title>
    <meta charset='utf-8' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/core.less")
    <link rel="icon" href="~/Content/img/gomc-ico.png" />
</head>
<nav class='navbar navbar-default navbar-fixed-top main-menu' role='navigation'>
    <div class='container-fluid'>
        <div class='navbar-header' id='menu '>
            <a href='#'><img src='~/Content/img/gomc.png' alt='team logo' class='img-responsive'></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" href="#navCollapse" data-parent='#menu' id='btn'>
                <span class='glyphicon glyphicon-align-justify'></span>
            </button>
            <div class='collapse navbar-collapse' id='navCollapse'>
                <ul class='nav nav-tabs nav-justified nav '>
                    <li>@Html.ActionLink("GOMC", "Gomc", "Home")</li>
                    <li>@Html.ActionLink("Features", "Features", "Home")</li>
                    <li>@Html.ActionLink("Downloads", "Downloads", "Home")</li>
                    <li>@Html.ActionLink("Documentation", "Documentation", "Home")</li>
                    <li>@Html.ActionLink("Publication", "Publication", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<header>
    <h1>Admininstator page</h1>
</header>
<main class="admin-main">
    <p class='center-p'>If you have reached this page in error, click the navigation buttons to return to the main site</p>
    <p class='center-p'>Otherwise please login with your credentials</p>
    <hr class='grand-line' />
    <div class="container-fluid">
        <div class="row">
            <div class='well well-sm custom-well col-md-4 col-md-offset-4'>
                <form method="post" id="Admin">
                    <div class='form-group'>
                        <label for='Email'>Login</label>
                        <input class='form-control' type='email' name='uName' id='userName' placeholder="Email" required />
                    </div>
                    <div class='form-group'>
                        <label for='passCode'>Password</label>
                        <input class='form-control' type='password' name='pCode' id='passCode' placeholder="Password" required />
                    </div>
                    <button class='btn btn-success' type='submit'><span class="glyphicon glyphicon-log-in"></span> Login</button>
                </form>
            </div>
        </div>
    </div>
</main>
<script>
    document.onload = function () {
        if (document.readyState === 'interactive') {
            console.log("Admin page accessed");
            if (sessionStorage.getItem('Admin')) {
                window.location.href = "/Home/Temp";
            }
        }
    }
</script>
  
  

