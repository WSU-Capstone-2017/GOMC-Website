@{
    Layout = "~/Views/Home/_Home_Layout.cshtml";
    ViewBag.Title = "GOMC: Login";
}
@section NavSection {
    <li>@Html.ActionLink("GOMC", "Gomc", "Home")</li>
    <li>@Html.ActionLink("Features", "Features", "Home")</li>
    <li>@Html.ActionLink("Downloads", "Downloads", "Home")</li>
    <li>@Html.ActionLink("Documentation", "Documentation", "Home")</li>
    <li>@Html.ActionLink("Publications", "Publications", "Home")</li>
    <li>@Html.ActionLink("About", "About", "Home")</li>
}
<main>
        <div class="row">
            <div class='well well-sm custom-well col-md-4 col-md-offset-4 login-container'>
                <form method="post" id="Admin">
                    <div class='form-group has-feedback'>
                        <label for='Email' class="control-label">Login</label>
                        <div class="input-group">
                            <span class="input-group-addon" id="sizing-addon3"><i class="glyphicon glyphicon-user"></i></span><input class='form-control' type='email' name='uName' id='userName' placeholder="Email" required />
                            <span class="form-control-feedback"></span>
                        </div>
                    </div>
                    <div class='form-group has-feedback'>
                        <label for='passCode' class="control-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span><input class='form-control' type='password' name='pCode' id='passCode' placeholder="Password" required />
                            <span class="form-control-feedback"></span>
                        </div>
                    </div>
                    <div class="g-recaptcha scale-captcha hidden" id="loginCaptchaDiv"
                         data-sitekey="6LdqvTUUAAAAAGJtFI0OoT-vwmQK6meSc53CpBkT"
                         data-callback="captchaSelect"></div> <!--Implemented for captcha-->
                    
                    @Html.ActionLink("Go to Admin", "Admin", null, new { @class = "btn btn-primary", @id = "adminDirect", @style = "display: none;" })
                    <button class='btn btn-success' type='submit'><span class="glyphicon glyphicon-log-in"></span> Login</button>
                </form>
            </div>
        </div>
</main>
@section scripts
{
<script src='https://www.google.com/recaptcha/api.js'></script>
}