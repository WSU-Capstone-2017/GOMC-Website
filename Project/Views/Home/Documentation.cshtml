@{
    Layout = "~/Views/Home/_Home_Layout.cshtml";
}
<head>
    <title>Documentation</title>
    <meta charset='utf-8' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/core.less")
</head>
<nav class='navbar navbar-default navbar-fixed-top main-menu' role='navigation'>
    <div class='container-fluid'>
        <div class='navbar-header' id='menu '>
            <a href='#'><img src='~/Content/img/gomc.png' alt='team logo' class='img-responsive'></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" href="#navCollapse" data-parent='#menu' id='btn'>
                <span class='glyphicon glyphicon-align-justify'></span>
            </button>
            <div class='collapse navbar-collapse' id='navCollapse'>
                <ul class='nav nav-tabs nav-justified nav '>
                    <li>@Html.ActionLink("GOMC", "Gomc", "Home")</li>
                    <li>@Html.ActionLink("Features", "Features", "Home")</li>
                    <li>@Html.ActionLink("Downloads", "Downloads", "Home")</li>
                    <li>@Html.ActionLink("Documentation", "Documentation", "Home")</li>
                    <li>@Html.ActionLink("Publication", "Publication", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<header>
    <h1>Documentation</h1>
</header>
<main>  
        <section>
            <div class="row">
                <h4>We have an online version and a PDF version available below</h4>
                <div class='col-md-12'>
                    <p>Click here to open the online version: @Html.ActionLink("Here", "Latex", "Home", new {@class = "btn btn-primary"})</p>
                </div>
                <div class='col-md-12'>
                    <p>Click here to open the PDF: <a href='~/Content/img/Manual.pdf' target="_blank" class="btn btn-info">Here</a></p>
                </div>
            </div>
        </section>
    
        <hr class='grand-line' />
        <section>
            <div class="row">
                <div class='col-md-12 '>
                    <h2>Tutorials</h2>
                <hr class='grand-line' />
                <h4>For more info check us out on YouTube:<a href='https://www.youtube.com' target="_blank" class="btn btn-info">Click Here</a></h4>                       
                <div class='col-md-4 '>
                    <img class='img-responsive img-rounded ' src='~/Content/img/placeholder.jpg' />
                    <p class='center-p '>Tutorial A</p>
                </div>
                <div class='col-md-4 '>
                    <img class='img-responsive img-rounded' src='~/Content/img/placeholder.jpg' />
                    <p class='center-p '>Tutorial B</p>
                </div>
                <div class='col-md-4 '>
                    <img class='img-responsive img-rounded' src='~/Content/img/placeholder.jpg' />
                    <p class='center-p '>Tutorial C</p>
                </div>
            </div> 
              </div>
        </section>
        <hr class='grand-line ' />
        <section>
            <div class="row">
                <div class='col-md-12 '>
                    <h2>XML Generator</h2>                   
                    <h4>Click the button to fill out a form for conversion into XML:
                        @Html.ActionLink("Here", "XMLConfigForm", "Home", new { @class= "btn btn-primary" })</h4>
                </div>
            </div>
       </section>
</main>

