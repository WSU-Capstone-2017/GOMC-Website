            </div>
            <div class="row">
                <div class='well well-sm custom-well col-md-4'>
                    <h3>Examples set: @Model.ExamplesTagName</h3>
                    <ul>
                        @foreach (var example in Model.Examples)
                        {
                            <li class="model-link">@example.Name <a href="@example.Link">Example</a></li>
                        }
                    </ul>
                    <a>@Html.ActionLink("Click here for more examples", "MoreExamples", "Home")</a>
                </div>
            </div>          
</main>
