<!DOCTYPE html>
<!-- Home template, contains resusable html which consists of the following:
      - Header
      - Nav-bar
      - Footer
      - Dependant Javascript files 
      - Optional Script Render for other external JS files 
      - The analytics script 
-->
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset='utf-8' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/core.less")
    @RenderSection("head", false);
</head>
<body>
    <nav class='navbar navbar-default navbar-fixed-top main-menu' role='navigation'>
        <div class='container'>
            <div class='navbar-header' id='menu '>
                <button type="button" class="navbar-toggle" data-toggle="collapse" href="#navCollapse" data-parent='#menu' id='btn'>
                    <span class='glyphicon glyphicon-align-justify'></span>
                </button>
                <a href='#'><img src='~/Content/img/gomc-w.png' alt='team logo' id="teamLogo" style="width:4.375em;"></a>
            </div>
            <div class='collapse navbar-collapse navbar-right' id='navCollapse'>
                <ul class='nav nav-tabs'>
                    @RenderSection("NavSection", required: true)
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
<footer>
    <hr />
    <p class='footer-text'>@Html.ActionLink("Terms & Conditions", "Terms", "Home") |@Html.ActionLink("Site Map", "SiteMap", "Home") | @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home") | @Html.ActionLink("FAQ", "Faq", "Home") <br/></p>
    <p>Copyright &copy; <strong>GOMC Dev-Team 2017</strong></p>
</footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js.cookie")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/gomc")
<!--The script below is for the google-analytics, as demanded by client, code is pulled from present website-->
<script async src="https://www.google-analytics.com/analytics.js"></script>
<script>
    (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
    })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-83966581-1', 'auto');
    ga('send', 'pageview');
</script>
    
@RenderSection("scripts", required: false)
</body>

</html>
