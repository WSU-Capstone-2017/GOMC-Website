@{
    Layout = "~/Views/Home/_Home_Layout.cshtml";
}
<head>
    <!--
        WARNING: IF YOU ARE HERE AND NOT AN ADMIN YOU SHOULDN'T BE
    -->
    <title>Admin</title>
    <meta charset='utf-8' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/core.less")
    <link rel="icon" href="~/Content/img/gomc-ico.png" />
</head>
<nav class='navbar navbar-default navbar-fixed-top main-menu' role='navigation'>
    <div class='container-fluid'>
        <div class='navbar-header' id='menu '>
            <a href='#'><img src='~/Content/img/gomc.png' alt='team logo' class='img-responsive'></a>
            <button type="button" class="navbar-toggle" data-toggle="collapse" href="#navCollapse" data-parent='#menu' id='btn'>
                <span class='glyphicon glyphicon-align-justify'></span>
            </button>
            <div class='collapse navbar-collapse' id='navCollapse'>
                <ul class='nav nav-tabs nav-justified nav '>
                    <li>@Html.ActionLink("GOMC", "Gomc", "Home")</li>
                    <li>@Html.ActionLink("Features", "Features", "Home")</li>
                    <li>@Html.ActionLink("Downloads", "Downloads", "Home")</li>
                    <li>@Html.ActionLink("Documentation", "Documentation", "Home")</li>
                    <li>@Html.ActionLink("Publication", "Publication", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<header>
    <h1>Welcome ...</h1><!--Need model to support a userName based off the email up to the @@ sign-->
</header>
<main class="admin-main">
    <div class="container-fluid">
        <div class="panel">
            <div class="panel-heading panel-default">
                <h1>Official Admin View<button class="btn btn-sm btn-primary pull-right logout-button" id="adminLogout"><span class="glyphicon glyphicon-log-out"></span> Logout</button></h1>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <table id="userNamesAndEmails">
                            <thead>Registered Users</thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                            <tr>
                                <td>Test</td>
                                <td>A@abc.com</td>
                            </tr>
                            <tr>
                                <td>Test</td>
                                <td>A@abc.com</td>
                            </tr>
                            <tr>
                                <td>Test</td>
                                <td>A@abc.com</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h4>Update Announcements</h4>
                        <p>To update the announcements on the main page fill out the form below: </p>
                        <form class="form-inline">
                                <form-group>
                                    <label>New Announcement</label>
                                    <textarea type="textarea" wrap="soft" name="NewAnnouncementTexts" required rows="3" class="form-control"></textarea>
                                </form-group>
                                <form-group>
                                    <button class="btn btn-danger">Clear</button>
                                    <button class="btn btn-success">Post</button>
                                </form-group>
                        </form>
                    </div>
                    <div class="col-md-6">
                        <div class="well-lg custom-well">
                            <h5 class="center-p">Update the following dynamic content manually via webhooks</h5>
                            <div class="btn-group btn-group-sm btn-group-vertical center-block">
                                <button class="btn btn-sm btn-primary"><span class="glyphicon glyphicon-refresh"></span>&nbsp; &nbsp; Refresh LaTeX File</button>
                                <button class="btn btn-sm btn-success"><span class="glyphicon glyphicon-refresh"></span>&nbsp; &nbsp; Refresh the downloads links</button>
                                <button class="btn btn-sm btn-info"><span class="glyphicon glyphicon-refresh"></span>&nbsp; &nbsp; Refresh the examples links</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <h5>Data requested from client table</h5>
                        <table id="webStats">
                            <thead>Website Statistcs</thead>
                            <tr>
                                <th>Name</th>
                                <th>Value</th>
                            </tr>
                            <tr>
                                <td>Downloads</td>
                                <td>1200</td>
                            </tr>
                            <tr>
                                <td>Clicks</td>
                                <td>950</td>
                            </tr>
                            <tr>
                                <td>Views</td>
                                <td>120</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    document.onload = function () {
        if (document.readyState === 'interactive') {
            console.log("Admin full page accessed");
            if (!!sessionStorage.getItem('Admin')) {
                window.location.href = "/Home/Temp";
            }
        }
    }
</script>

